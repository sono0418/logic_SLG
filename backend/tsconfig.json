// backend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2016"],
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // src フォルダ以下のすべての .ts ファイルをコンパイル対象にする
  "exclude": ["node_modules"] // node_modules フォルダはコンパイル対象から除外する
}